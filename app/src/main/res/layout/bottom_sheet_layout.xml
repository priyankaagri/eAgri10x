<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:id="@+id/BottomSheetcontainer"
    android:orientation="vertical"
    android:padding="16dp">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:layout_gravity="left"
       android:src="@drawable/agrilogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/proxima_nova_alt_bold"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/logout_b"
        android:textColor="@color/black"
        android:textSize="18dp"
       android:layout_marginVertical="10dp"
        android:fontFamily="@font/proximanova_regular"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
           android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/algo_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="30dp"
            android:textColor="@color/purple_500"
           android:background="@drawable/backgroun_hollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/course_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="30dp"
            android:textColor="@color/white"
            android:background="@drawable/backgroun_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
             />

    </LinearLayout>



</LinearLayout>