<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >
        <RelativeLayout
            android:id="@+id/toolbar_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btn_back_about_us_id"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/black" />

            <TextView
                android:layout_centerVertical="true"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/btn_back_about_us_id"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/btn_back_about_us_id"
                android:text="@string/menu_about_us"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout


            android:background="@color/darkgrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_menu_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                >


                <TextView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/proxima_nova_alt_light"
                    android:text="@string/tv_about_agri10x"
                    android:textSize="18sp" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="16dp"
                >


                <TextView
                    android:id="@+id/tv_faq_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/proxima_nova_alt_light"
                    android:text="@string/tv_faq"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/profile_forward"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignEnd="@+id/tv_faq_id"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_forward" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_privacy_policy_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="1dp"
                >


                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/proxima_nova_alt_light"
                    android:text="@string/tv_privacy_policy"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignEnd="@+id/tv_privacy_policy"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_forward" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_refund_policy_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="1dp"
                >


                <TextView
                    android:id="@+id/tv_refund_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/proxima_nova_alt_light"
                    android:text="@string/tv_refund_policy"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignEnd="@+id/tv_refund_policy"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_forward" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>