<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.SeeAllDailyDealsFeaturedFragment">
    <RelativeLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/but_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/but_back"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/but_back"
            android:text="Trade Value"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:id="@+id/header_txt"
        android:layout_below="@+id/toolbar1"
        android:layout_marginVertical="20dp"
        android:background="@drawable/dark_background_txt"
        android:padding="@dimen/activity_margin_normal"
        android:textColor="@color/appgreen"
        android:textSize="@dimen/text_size_small1"
        android:text="@string/cart_txt"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.todkars.shimmer.ShimmerRecyclerView
        android:layout_below="@+id/header_txt"
        android:layout_above="@+id/txtamount"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:id="@+id/recyle_cart_view"/>

    <LinearLayout
        android:id="@+id/txtamount"
        android:layout_width="match_parent"
        android:layout_above="@+id/checkout_btn"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/text_size_fiteen"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_fiteen"
            android:fontFamily="@font/proxima_nova_alt_bold"
            android:text="@string/total_amout"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sub_toatl_txt"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textColor="@color/appgreen"
            android:gravity="right"
            android:textSize="@dimen/text_size_fiteen"
            android:fontFamily="@font/proxima_nova_alt_bold"
            android:text="@string/txttt_amount"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Button
        android:id="@+id/checkout_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/activity_margin_medium"
        android:textColor="@color/white"
        android:text="@string/chcekout"
        android:padding="@dimen/text_margin_large"
        android:layout_marginHorizontal="@dimen/activity_margin_medium"
        android:layout_marginVertical="@dimen/activity_margin_medium"
        android:layout_height="wrap_content">

    </Button>


</RelativeLayout>