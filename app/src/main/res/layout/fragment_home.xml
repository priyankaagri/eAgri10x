<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logogreen">

                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_signups"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:fontFamily="@font/proxima_nova_bold"
                            android:gravity="center"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/signin_img" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hloa"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/round_corner_blue">

                    <Spinner
                        android:id="@+id/catagaryname_id"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:spinnerMode="dropdown" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/round_corner_blue">

                    <ImageView
                        android:id="@+id/srcg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/search"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/srcg"
                        android:fontFamily="@font/proximanova_regular"
                        android:gravity="center|left"
                        android:text="Looking for....."
                        android:textColor="@color/text_color"
                        android:textSize="14dp">

                    </TextView>
                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <androidx.viewpager.widget.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/viewPage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    tools:context="com.codinginflow.picassoimagesliderexample.MainActivity"></androidx.viewpager.widget.ViewPager>

            </androidx.cardview.widget.CardView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="15dp"
                            android:src="@drawable/vegetable_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:gravity="center"
                            android:text="@string/vegitabl"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="15dp"
                            android:src="@drawable/fruits_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:gravity="center"
                            android:text="@string/furits"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="15dp"
                            android:src="@drawable/grains_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:gravity="center"
                            android:text="@string/gaisins"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="15dp"
                            android:src="@drawable/pulses_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:gravity="center"
                            android:text="@string/vegpulesr"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="15dp"
                            android:src="@drawable/spices_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:gravity="center"
                            android:text="@string/spixce"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/dailydeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <include
                    layout="@layout/daily_deal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/text_size_small"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:text="@string/our_hero"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_fiteen"
                            android:src="@drawable/framer_new_balck">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="70dp"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:text="@string/farmer"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/radius_button_white"
                            android:fontFamily="@font/proximanova_regular"
                            android:padding="10dp"
                            android:text="@string/contact_us"
                            android:textColor="@color/appgreen"
                            android:textSize="15dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_fiteen"
                            android:src="@drawable/trader_new_black">

                        </ImageView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="70dp"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:text="@string/trder"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/radius_button_white"
                            android:fontFamily="@font/proximanova_regular"
                            android:padding="10dp"
                            android:text="@string/contact_us"
                            android:textColor="@color/appgreen"
                            android:textSize="15dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_fiteen"
                            android:src="@drawable/grians">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:text="@string/wehole_garins"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/proximanova_regular"
                            android:text="@string/premimu_garins"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/radius_button_white"
                            android:fontFamily="@font/proximanova_regular"
                            android:padding="10dp"
                            android:text="@string/contact_us"
                            android:textColor="@color/appgreen"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/Top_picks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <include
                    layout="@layout/top_pics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/text_size_medium"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:text="@string/catogery_list"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/caltogerylist_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_ViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="right"
                android:text="@string/viewall"
                android:textColor="@color/appcolor"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/only_feature_rv"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/text_size_small"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:text="@string/our_services"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iamgframer">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/i_am_famr"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="@dimen/second_card_view"
                        android:background="@drawable/radius_button"
                        android:padding="10dp"
                        android:text="@string/iwanttosell"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iamtaders">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/i_am_trader"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="@dimen/second_card_view"
                        android:background="@drawable/radius_button"
                        android:padding="10dp"
                        android:text="@string/iwanttobut"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fpo_img">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/i_am_fpo"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="@dimen/second_card_view"
                        android:background="@drawable/radius_button"
                        android:padding="10dp"
                        android:text="@string/iwanttowork"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/worker_img">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/i_am_worker"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="@dimen/second_card_view"
                        android:background="@drawable/radius_button"
                        android:padding="10dp"
                        android:text="@string/iwanttowork"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/text_size_small"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:text="@string/comdity_rate"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>