<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >

    <RelativeLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/but_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />


        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/but_back"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/but_back"
            android:text="@string/trade_total_value"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/datalist"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="@string/trade_amount"
                android:layout_gravity="center"
                android:gravity="left"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txt_trade_amt"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/text_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:text="@string/convi_charge"
                android:layout_gravity="left"
                android:gravity="left"
                android:fontFamily="@font/proximanova_regular"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txt_convenience_charge"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/text_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:text="@string/heading_fee"
                android:layout_gravity="left"
                android:gravity="left"
                android:fontFamily="@font/proximanova_regular"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txt_handline_fee"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/text_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:text="@string/commision"
                android:layout_gravity="center"
                android:gravity="left"
                android:fontFamily="@font/proximanova_regular"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txt_commition"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="0dp"
            android:background="@color/text_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="@string/total_tade_amount"
                android:layout_gravity="center"
                android:gravity="left"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/totaltradeamt"
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_alt_bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/bookorder_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="10dp"
            android:padding="@dimen/text_size_mini"
            android:text="@string/book_order"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@drawable/btn_round_orange"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_margin_medium"/>
        <TextView
            android:id="@+id/checkout_btne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="10dp"
            android:padding="@dimen/text_size_mini"
            android:text="@string/purches"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@drawable/btn_round"
            android:textSize="@dimen/activity_margin_medium"/>

    </LinearLayout>







</RelativeLayout>