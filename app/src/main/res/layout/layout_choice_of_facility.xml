<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancle_btn"
            android:layout_width="20dp"
            android:src="@drawable/close"
            android:layout_marginTop="20dp"
            android:layout_height="20dp">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/name"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:text=" *"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:id="@+id/edt_txt_name"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:hint="@string/name"
                android:editable="false"
                android:textSize="15sp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/proximanova_regular"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:background="@drawable/edt_txt_background"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/phon_numbr"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/red"
                    android:text=" *"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <EditText
                android:id="@+id/edt_txt_phone"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:hint="@string/phon_numbr"
                android:digits="0123456789"
                android:textSize="15sp"
                android:inputType="number"
                android:editable="false"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/proximanova_regular"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color"
                android:background="@drawable/edt_txt_background"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"

            android:layout_height="wrap_content">


<CheckBox
    android:id="@+id/checkbox_warehouse"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/warehouse"/>
<CheckBox
    android:id="@+id/checkbox_transportation"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/transportation"/>


        </LinearLayout>


        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
           android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:text="@string/submit"
            android:fontFamily="@font/proxima_nova_alt_bold"
            android:background="@drawable/radius_button"
            android:layout_height="wrap_content">

        </Button>



    </LinearLayout>

</LinearLayout>