<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:gravity="right">

                <ImageView
                    android:id="@+id/cancle_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/close">

                </ImageView>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productlistdata_recycleview"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30sp"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:text="Total Amount"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_total_amount"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/appgreen"

                    android:gravity="right"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                android:paddingBottom="10dp"
                android:background="@drawable/background_grayplane"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/billing_Address"
                    android:textSize="20sp"
                android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/txt_billing_address"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
android:paddingBottom="10dp"
                android:background="@drawable/background_grayplane"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/Shipping_address"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/txt_shipping_address"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:paddingBottom="10dp"

                android:background="@drawable/background_grayplane"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/Delivery_Notes"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/txt_delivery_notes"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>