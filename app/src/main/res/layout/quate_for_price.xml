<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cancle_btn"
                    android:layout_width="20dp"
                    android:src="@drawable/close"
                    android:layout_height="20dp">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/name"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/red"
                            android:text=" *"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <EditText
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:id="@+id/edt_txt_name"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/name"
                        android:editable="false"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/phon_numbr"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/red"
                            android:text=" *"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/edt_txt_phone"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/phon_numbr"
                        android:digits="0123456789"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:editable="false"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/email"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <EditText
                        android:id="@+id/edit_txt_emailid"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/email"
                        android:textSize="15sp"
                        android:editable="false"
                        android:inputType="textEmailAddress"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/commodity"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/red"
                            android:text=" *"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <EditText
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:id="@+id/edt_txt_comodity"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/commodity"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="20dp"
                        android:inputType="textPersonName"
                        android:editable="false"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/varity"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/red"
                            android:text=" *"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <EditText
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:id="@+id/edt_txt_varity"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/varity"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:editable="false"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:text="@string/price_per_kg"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/red"
                            android:text=" *"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <EditText

                        android:id="@+id/edt_txt_price_per_kg"
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:hint="@string/price_per_kg"
                        android:textSize="15sp"
                        android:digits="0123456789"
                        android:layout_marginHorizontal="20dp"
                        android:inputType="number"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_color"
                        android:background="@drawable/edt_txt_background"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/radius_button"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>





        </LinearLayout>

    </ScrollView>





</LinearLayout>