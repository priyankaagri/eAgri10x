<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"

        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="200dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        android:paddingBottom="2dp"
        android:layout_marginBottom="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mainid"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/potato_dwn"
                    android:id="@+id/product_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>



                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_toRightOf="@+id/product_img"
                    android:layout_width="match_parent"

                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <TextView

                            android:id="@+id/product_name"
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:textSize="16sp"
                            android:textColor="@color/black"

                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>

                        <TextView

                            android:id="@+id/product_price"
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:textSize="14sp"
                            android:textColor="@color/appgreen"
                            android:layout_gravity="right"
                            android:gravity="right"

                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/product_varity"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12sp"

                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/product_garde"
                        android:layout_width="match_parent"

                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/avlstock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/packingsize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>












            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mainid"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/text_color"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:fontFamily="@font/proximanova_regular"
                        android:text="@string/priceperkg"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/totol_price"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:gravity="bottom|center"
                        android:textSize="13sp"
                        android:textAlignment="center"

                        android:fontFamily="@font/proximanova_regular"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/text_color"
                        android:textSize="10sp"
                        android:gravity="bottom|center"
                        android:fontFamily="@font/proximanova_regular"
                        android:text="@string/qunty"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/product_quantity"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:gravity="bottom|center"
                        android:textSize="13sp"
                        android:textAlignment="center"

                        android:fontFamily="@font/proximanova_regular"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lledt"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="10sp"

                        android:fontFamily="@font/proximanova_regular"
                        android:text="@string/total_weight"
                        android:layout_height="wrap_content"/>

                    <EditText

                        android:id="@+id/product_total_weight"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/edt_txt_background"
                        android:fontFamily="@font/proximanova_regular"
                        android:gravity="bottom|center"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_update"
                    android:visibility="invisible"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edt_txt_background"
                    android:text="UPDATE"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/proxima_nova_alt_light"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/img_remove"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.4"
                    android:layout_height="25dp"
                    />

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>