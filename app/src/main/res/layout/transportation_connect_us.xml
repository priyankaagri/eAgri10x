<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/hollow_back"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cancle_btn"
                    android:layout_width="20dp"
                    android:src="@drawable/close"
                    android:layout_height="20dp">

                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="15dp"
                    android:textSize="22sp"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textColor="@color/appgreen"
                    android:layout_marginLeft="15dp"
                    android:text="@string/transportation"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="15dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/company_name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" *"
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <EditText

                    android:id="@+id/edt_txt_cname"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:hint="@string/company_name"
                    android:editable="false"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:background="@drawable/edt_txt_background"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="15dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/fname"
                        android:textColor="@color/black"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" *"
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <EditText
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:id="@+id/edt_txt_fname"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:hint="@string/fname"

                    android:editable="false"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edt_txt_background"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="15dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/lname"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" * "
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <EditText
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:id="@+id/edt_txt_lname"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:hint="@string/lastname_str"
                    android:textSize="15sp"
                    android:maxLength="10"
                    android:inputType="text"
                    android:editable="false"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:textColor="@color/black"
                    android:background="@drawable/edt_txt_background"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="15dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/phon_numbr"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" * "
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <EditText
                    android:id="@+id/edt_txt_phone"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:hint="@string/phon_numbr"
                    android:digits="0123456789"
                    android:textSize="15sp"
                    android:maxLength="10"
                    android:inputType="number"
                    android:editable="false"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:textColor="@color/black"
                    android:background="@drawable/edt_txt_background"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="15dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="@string/email"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" * "
                        android:visibility="gone"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edt_txt_background"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"
                    android:text="@string/Type_of_transport"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinner_type_transport"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/white"
                    android:background="@drawable/spinner_border" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"
                    android:text="@string/Weight_of_transport"
                    android:fontFamily="@font/proxima_nova_alt_bold"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinner_weight_transport"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:popupBackground="@color/white"
                    android:background="@drawable/spinner_border"/>

                <LinearLayout
                    android:paddingBottom="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/price_kg"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" * "
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <EditText
                    android:id="@+id/edt_txt_price"
                    android:layout_width="match_parent"

                    android:digits="0123456789"
                    android:padding="13dp"
                    android:hint="@string/pricekg"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:fontFamily="@font/proximanova_regular"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color"
                    android:background="@drawable/edt_txt_background"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:paddingBottom="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:text="@string/Operating_State"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:text=" * "
                        android:visibility="visible"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:background="@drawable/edt_txt_background"

                    android:layout_height="wrap_content">
                    <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner

                        android:id="@+id/spinner_state_transaporatation"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="45dp"
                        app:SearchHintText="Operating State"


                        />
                </LinearLayout>
            </LinearLayout>






            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btn_round"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="15dp"></Button>



        </LinearLayout>

    </ScrollView>


</LinearLayout>