<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="2dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:visibility="visible"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:elevation="5dp"
                    android:id="@+id/relative_stock"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/featured_bg"
                    android:visibility="visible">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/varified_value"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/product_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/txt_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/proxima_nova_alt_bold"

                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView

                                android:layout_gravity="end"
                                android:textAlignment="textEnd"
                                android:id="@+id/txt_product_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/proxima_nova_alt_bold"


                                android:textColor="@color/appgreen"
                                android:textSize="20sp"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_varity_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proximanova_regular"
                            android:paddingHorizontal="15dp"

                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView

                                android:background="@drawable/btn_round"
                                android:id="@+id/txt_tradenow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanova_regular"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="5dp"
                                android:layout_marginLeft="20dp"
                                android:text="@string/Trade_Now"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_productnotavl"
                                android:visibility="gone"
                                android:fontFamily="@font/proximanova_regular"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                            <ImageView
                                android:id="@+id/img_setting"
                                android:layout_marginRight="17dp"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right|end"
                                android:foregroundGravity="right"
                                android:src="@drawable/more" />
                        </RelativeLayout>




                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>